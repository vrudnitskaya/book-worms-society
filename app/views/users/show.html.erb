<h1><%= @user.username %></h1>

<% if @user.avatar_url.present? %>
  <%= image_tag @user.avatar_url, alt: "Avatar", width: 150, height: 150 %>
<% end %>

<p><strong>Bio:</strong> <%= @user.bio.presence || 'â€”' %></p>
<p><strong>Member since:</strong> <%= @user.created_at.strftime('%d %B %Y') %></p>

<h3>Following: <%= @following_count %></h3>
<ul>
  <% @following.each do |user| %>
    <li><%= link_to user.username, user_path(user) %></li>
  <% end %>
</ul>

<h3>Followers: <%= @followers_count %></h3>
<ul>
  <% @followers.each do |user| %>
    <li><%= link_to user.username, user_path(user) %></li>
  <% end %>
</ul>

<%= link_to 'Back to Home', root_path %>
