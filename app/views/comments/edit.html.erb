<h2>Edit Comment</h2>

<%= form_with model: @comment, local: true do |form| %>
  <%= form.hidden_field :post_id %>
  <%= form.hidden_field :parent_comment_id %>

  <div>
    <%= form.label :content %><br>
    <%= form.text_area :content %>
  </div>

  <div>
    <%= form.submit "Update" %>
  </div>
<% end %>

<%= link_to 'Back to Post', post_path(@comment.post_id) %>
