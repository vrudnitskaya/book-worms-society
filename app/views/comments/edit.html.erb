<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-8">

      <h2 class="mb-4 text-center">Edit Comment</h2>

      <%= form_with model: @comment, local: true, html: { class: "needs-validation" } do |form| %>
      
        <% if @comment.errors.any? %>
      <div class="alert alert-danger small">
        <i class="fa-solid fa-circle-exclamation me-1"></i>
        <%= @comment.errors.full_messages.to_sentence %>
      </div>
      <% end %>

      <%= form.hidden_field :post_id %>
      <%= form.hidden_field :parent_comment_id %>

      <div class="mb-3">
        <%= form.label :content, class: "form-label" %>
        <%= form.text_area :content, class: "form-control", rows: 3, required: true %>
      </div>
      
      <div class="mt-3 d-flex flex-column">
        <%= form.submit "Update", class: "btn btn-success w-25 align-self-center" %>
        <div class: "mt-2">
          <i class="fa-solid fa-arrow-left"></i>
          <%= link_to 'Back to Post', post_path(@comment.post_id)%>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>