<div class="d-flex flex-column justify-content-between px-5 py-4" style="min-height: calc(100vh - 8rem);">
   <div class="d-flex justify-content-between flex-column flex-md-row">
      <div class="col-12 col-md-9">
         <div class="d-flex gap-2">
            <h2 class="mb-3 h3" style="color: var(--bs-primary)">
            Posts with a tag "<%= @tag.name %>" 
            </h2>
            <% if logged_in? %>
            <% if @subscribed %>
            <%= button_to "Unfollow", tag_follow_path(tag_id: @tag.id), method: :delete, class: "btn btn-danger" %>
            <% else %>
            <%= button_to "Follow", tag_follows_path(tag_id: @tag.id), method: :post, class: "btn btn-success" %>
            <% end %>
            <% end %>
         </div>
         <% if @posts.any? %>
         <% @posts.each do |post| %>
         <div class="pb-2 w-75">
            <h4><%= link_to post.title, post_path(post) %></h4>
            <p class="mb-1">
               by <%= link_to post.user.username, user_path(post.user) %>
            </p>
            <p><%= truncate(post.content, length: 150) %></p>
            <hr style="border: none; border-bottom: 2px solid var(--bs-primary);">
         </div>
         <% end %>
         <% else %>
         <p>No posts with this tag yet.</p>
         <% end %>
      </div>
      <div class="col-12 col-md-3">
         <h2 class="mb-3 h3" style="color: var(--bs-primary)">Top Tags</h2>
         <ul class="list-unstyled">
            <% @top_tags.each do |tag| %>
            <li>
               <%= link_to "##{tag.name}", tag_path(tag.slug) %>
            </li>
            <% end %>
         </ul>
         <hr style="border: none; border-bottom: 2px solid var(--bs-primary);">
         <h2 class="mb-3 h3" style="color: var(--bs-primary)">Recent Posts</h2>
         <ul class="list-unstyled">
            <% @recent_posts.each do |post| %>
            <li class="mb-1">
               <%= link_to post.title, post_path(post) %>
            </li>
            <% end %>
         </ul>
      </div>
   </div>
   <div class="align-self-center">
      <% if @total_pages > 1 %>
      <nav aria-label="Page navigation">
         <ul class="pagination">
            <% if @current_page > 1 %>
            <li class="page-item">
               <%= link_to 'Previous', tag_path(@tag.slug, page: @current_page - 1), class: 'page-link' %>
            </li>
            <% else %>
            <li class="page-item disabled"><span class="page-link">Previous</span></li>
            <% end %>
            <% (1..@total_pages).each do |page_num| %>
            <% if page_num == @current_page %>
            <li class="page-item active" aria-current="page">
               <span class="page-link"><%= page_num %></span>
            </li>
            <% else %>
            <li class="page-item">
               <%= link_to page_num, tag_path(@tag.slug, page: page_num), class: 'page-link' %>
            </li>
            <% end %>
            <% end %>
            <% if @current_page < @total_pages %>
            <li class="page-item">
               <%= link_to 'Next', tag_path(@tag.slug, page: @current_page + 1), class: 'page-link' %>
            </li>
            <% else %>
            <li class="page-item disabled"><span class="page-link">Next</span></li>
            <% end %>
         </ul>
      </nav>
      <% end %>
   </div>
</div>