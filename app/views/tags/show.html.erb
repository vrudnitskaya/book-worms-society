<h1>Posts with a tag "<%= @tag.name %>"</h1>

<% @posts.each do |post| %>
  <div>
    <h3><%= link_to post.title, post_path(post) %></h3>
    <p><%= truncate(post.content, length: 150) %></p>
    <p>by <%= link_to post.user.username, user_path(post.user) %></p>
  </div>
<% end %>

<%= link_to 'Back to Home', root_path %>
